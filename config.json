		},
		{
			"key" : "submit-option",
			"name" : "Form submit options",
			"type" : "text"
		},
		{
			"key" : "project-home-redirect",
			"name" : "Redirect from the Project Home page to this URL",
			"type" : "text"
		},
		{
			"key" : "report-namespaces",
			"name" : "Report namespaces for specific roles",
			"type" : "checkbox"
		},
		{
